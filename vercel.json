{
    "version": 2,
    "functions": {
        "api/*.php": {
            "runtime": "vercel-php@0.6.0"
        }
    },
    "routes": [
        {
            "src": "/assets/(.*)",
            "dest": "/assets/$1"
        },
        {
            "src": "/components/(.*)",
            "dest": "/components/$1"
        },
        {
            "src": "/(css|js|img|fonts)/(.*)",
            "dest": "/assets/$1/$2"
        },
        {
            "src": "/(.*)\\.php$",
            "dest": "/api/index.php"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ]
}